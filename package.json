{
	"name": "autohotkey-debug",
	"displayName": "AutoHotKey Debug",
	"description": "Debug Adapter for AutoHotKey.",
	"version": "0.6.3",
	"publisher": "helsmy",
	"author": {
		"name": "Helsmy"
	},
	"license": "LGPL-3.0",
	"keywords": [
		"ahk","AutoHotKey","autohotkey",
		"debug","debugger"
	],
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Debuggers"
	],
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/helsmy/autohotkey-debug-adaptor.git"
	},
	"bugs": {
		"url": "https://github.com/helsmy/autohotkey-debug-adaptor/issues"
	},
	"activationEvents": [
		"onDebug"
	],
	"main": "./out/extension.js",
	"contributes": {
		"breakpoints": [
			{
				"language": "ahk"
			},
			{
				"language": "autohotkey"
			}
		],
		"properties": {

			"autohotkey.executable": {
				"type": "string",
				"default": "C:\\Program Files\\Autohotkey\\AutoHotkey.exe",
				"description": "Absolute path of executable file of AutoHotKey"
			}
		},
		"debuggers": [
			{
				"type": "ahkdbg",
				"label": "AutoHotKey Debug",
				"program": "./ahkdbg/debugAdapter.ahk",
				"runtime": "./bin/AutoHotkey.exe",
				"languages": ["ahk", "autohotkey"],
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to an ahk file.",
								"default": "${workspaceRoot}/${fileBasename}"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							},
							"captureStreams" : {
								"type": "boolean",
								"description": "Whether to receive standard io stream.",
								"default": true
							},
							"AhkExecutable": {
								"type": "string",
								"description": "Absolute path of executable file of AutoHotKey",
								"default": "C:\\Program Files\\AutoHotkey\\AutoHotkey.exe"
							},
							"port": {
								"type": "number",
								"description": "The port on which to listen for XDebug",
								"default": 9005
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "ahkdbg",
						"request": "launch",
						"name": "AHKDebug",
						"program": "${workspaceRoot}/${fileBasename}",
						"stopOnEntry": true,
						"captureStreams" : true,
						"AhkExecutable": "C:\\\\Program Files\\\\AutoHotkey\\\\AutoHotkey.exe",
						"port": 9005
					}
				],
				"configurationSnippets": [
					{
						"label": "AutoHotKey Debug: Launch",
						"description": "A new configuration for 'debugging' AutoHotKey.",
						"body": {
							"type": "ahkdbg",
							"request": "launch",
							"name": "A new configuration for 'debugging' AutoHotKey.",
							"program": "^\"\\${workspaceRoot}/\\${fileBasename}\"",
							"stopOnEntry": true,
							"captureStreams" : true,
							"AhkExecutable": "C:\\\\Program Files\\\\AutoHotkey\\\\AutoHotkey.exe",
							"port": 9005
						}
					}
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile",
		"test": "node ./out/test/runTest.js",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.44.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.2"
	}
}
