{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "ahkdbg",
			"request": "launch",
			"name": "Debug AHK file",
			"program": "${file}",
			"stopOnEntry": false,
			"captureStreams": true,
			"AhkExecutable": "",
			"port": 9005
		},
		{
			"type": "ahkdbg",
			"request": "attach",
			"name": "debugAdapter",
			"program": "${workspaceFolder}\\ahkdbg\\debugAdapter.ahk",
			"stopOnEntry": false,
			"captureStreams": true,
			"AhkExecutable": "C:\\Program Files\\AutoHotkey\\AutoHotkey.exe",
			"port": 9006
		},
		{
			"name": "Debug Adapter E2E Test",
			"type": "node",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": [
				"-u",
				"tdd",
				"--timeout",
				"999999",
				"--colors",
				"${workspaceRoot}/out/tests/**/*.test.js"
			],
			"internalConsoleOptions": "openOnSessionStart",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"outFiles": ["${workspaceRoot}/out/test/**/*.test.js",
						"${workspaceRoot}/out/**/*.js"]
		},
		{
			"name": "Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			],
			"preLaunchTask": "npm: watch"
		}],
	"compounds": [
		{
			"name": "Extension + Server",
			"configurations": [ "Extension", "debugAdapter" ]
		}
	]
}
